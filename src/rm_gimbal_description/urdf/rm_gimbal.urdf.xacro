<?xml version="1.0" encoding="utf-8"?>

<robot name="rm_gimbal"
  xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:arg name="xyz" default="0.10 0 0.05" />
  <xacro:arg name="rpy" default="0 0 0" />
  <xacro:arg name="camera_name" default="camera" />

  <link name="base_link" />

  <link name="gimbal_link" />

  <joint name="gimbal_joint" type="floating">
    <parent link="base_link" />
    <child link="gimbal_link" />
  </joint>

  <link name="$(arg camera_name)_link" />

  <joint name="$(arg camera_name)_joint" type="fixed">
    <origin xyz="$(arg xyz)" rpy="$(arg rpy)" />
    <parent link="gimbal_link" />
    <child link="$(arg camera_name)_link" />
    <axis xyz="0 0 0" />
  </joint>

  <link name="$(arg camera_name)_optical_frame" />

  <joint name="$(arg camera_name)_optical_joint" type="fixed">
    <origin xyz="0 0 0" rpy="${-pi/2} 0 ${-pi/2}" />
    <parent link="$(arg camera_name)_link" />
    <child link="$(arg camera_name)_optical_frame" />
  </joint>

</robot>
